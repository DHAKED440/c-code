#include<stdio.h>
#include<limits.h>
// function for search number in matrix
int search(int arr[][4], int target , int i, int j){
    for(int i=0; i<3; i++){
    for(int j=0; j<4; j++){
        if(arr[i][j]==target){
            return 1;
        }
    }
   }
   return 0;
}
// function for row wise sum of matrix
int rowsum(int arr[][4], int i, int j){
      for(int i=0; i<3; i++){
        int ans=0;
    for(int j=0; j<4; j++){
       ans+=arr[i][j];
    }
    printf("sum=%d \n",ans);
   }  
}
// function for  coloum sum
int colsum(int arr[][4], int i, int j){
    for(int j=0; j<4; j++){
        int ans=0;
        for(int i=0; i<3; i++){
            ans+=arr[i][j];
        }
        printf("sum=%d \n", ans);
    }
}

int main() {
   int arr[3][4];
//    for taking input elements
   for(int i=0; i<3; i++){
    for(int j=0; j<4; j++){
        scanf("%d", &arr[i][j]);
    }
   }
// for output matrix
for(int i=0; i<3; i++){
    for(int j=0; j<4; j++){
        printf("%d ", arr[i][j]);
    }
    printf("\n");
   }
   
int target;
   printf("Enter the target : ");
   scanf("%d", &target);
int found=search(arr,target,3,4);
   if( found == 1 ){
    printf("Target is present\n");
   } else {
    printf("Target is not present\n");
   }

  rowsum(arr,3,4);
  colsum(arr,3,4);
    return 0;
}
