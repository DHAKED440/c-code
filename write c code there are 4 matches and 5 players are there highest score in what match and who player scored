#include<stdio.h>
#include<limits.h>

int main () {
    int player=0;
int arr[4][5];

for(int i=0; i<4; i++){
    printf("score in match %d : \n",i+1);
    for(int j=0; j<5; j++){
        printf("Player %d score = ",j+1);
        scanf("%d", &arr[i][j]);
    }
    printf("\n");
}

for(int i=0; i<4; i++){
    int max= INT_MIN;
    for(int j=0; j<5; j++){
      if(arr[i][j]>=max){
        max=arr[i][j];
        player=j+1;
      }
    }
    printf("Higest score in match %d = %d by player : ",i+1,max,player);

    for(int j=0; j<5; j++){
        if(arr[i][j]==max){
            printf("%d ",j+1);
        }
    }
    printf("\n");
}
return 0;
}
